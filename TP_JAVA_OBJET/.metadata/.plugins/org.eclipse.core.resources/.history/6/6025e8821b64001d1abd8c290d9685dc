package bookstore.metier;

import java.awt.geom.Line2D;
import java.awt.print.Printable;

public class Livre {
	
	
	// var
	public String titre, auteur;
	public int nbPages;
	
	// contructeur
	public Livre(String unAuteur, String unTitre, int Pages) {
		auteur = unAuteur;
		titre = unTitre;
		nbPages = Pages;
		
	}
	
	// accesseur
	public String getAuteur( ) {
		return auteur;
	}
	
	public String getTitre( ) {
		return titre;
	}
	
	public int getNbPages( ) {
		
		return nbPages;
	}
	
	// mutateur
	public void setNBpages(int n) {
		
		if (n<0) {
			System.err.print("erreur n ne peut pas etre negatif");
			return;
		}
		nbPages = n;
	}
	
	public void setAuteur(String a) {
		auteur = a;
	}
	
	public void setTitre(String b) {
		titre = b;
	}
	
	public void afficheToi() {
		
		System.out.println("Auteur :"+auteur+"\n");
	}
	
	public static void main(String[] args) {
		
		
	}

}
